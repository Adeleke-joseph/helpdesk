<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.ViewComplaintActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_V_complaint"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ToolBarTheme"
        android:background="@color/colorPrimary"/>

    <ir.alirezabdn.wp7progress.WP10ProgressBar
        android:id="@+id/progress_view_complaint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:animationDuration="2300"
        app:indicatorColor="@color/colorAccent"
        app:indicatorHeight="7"
        app:indicatorRadius="5"
        app:interval="100"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_view_complaint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tb_V_complaint"/>
</RelativeLayout>