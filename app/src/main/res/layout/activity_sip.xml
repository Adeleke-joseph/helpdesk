<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SipActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_sip"
        android:theme="@style/ToolBarTheme"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary" />

    <ir.alirezabdn.wp7progress.WP10ProgressBar
        android:id="@+id/sip_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:animationDuration="2300"
        android:visibility="visible"
        app:indicatorColor="@color/colorAccent"
        app:indicatorHeight="7"
        app:indicatorRadius="5"
        app:interval="100" />

<!--    <ir.alirezabdn.wp7progress.WP10ProgressBar-->
<!--        android:id="@+id/spi_progressBar"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_centerInParent="true"-->
<!--        android:visibility="visible"-->
<!--        android:clipChildren="false"/>-->

    <WebView
        android:id="@+id/sip_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tb_sip" />
</RelativeLayout>